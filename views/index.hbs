<div class="container" style="margin-top:20px;">


{{!-- add modal eklenecek --}}


  <div class="card row">
    <div class="card-header">Favori Filmlerim</div>
    <div class="card-body">

      <div class="form-row">
        <div class="form-group col-md-6">
          <input
            required
            class="form-control"
            type="text"
            name="title"
            id="title"
            placeholder="Film İsmi"
          />
        </div>
        <div class="form-group col-md-6">
          <input
            required
            class="form-control"
            type="text"
            name="director"
            id="director"
            placeholder="Yönetmen"
          />
        </div>
        <div class="form-group col-md-6">
          <input
            required
            class="form-control"
            type="text"
            name="url"
            id="url"
            placeholder="Film Afiş Linki"
          />
        </div>
      </div>
      <button type="button" onclick="addFilm()" id="addFilm" class="btn btn-danger">Film Ekleyin</button>
    </div>

    <div class="card-body">
      <hr />
      <h5 class="card-title" id="films-title">Filmler</h5>

      <hr />
      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">Film Afişi</th>
            <th scope="col">Film İsmi</th>
            <th scope="col">Yönetmen</th>
          </tr>
        </thead>
        <tbody id="films">
          {{#if movies.length}}
            {{#each movies}}
              <tr>
                  <td>
                    <img style="max-height: 500px;" src="{{url}}" class="img-fluid img-thumbnail">
                  </td>
                  <td><b>{{title}}</b></td>
                  <td>{{director}}</td>
                  <td>
                    <a onclick="updateFilm('{{_id}}')" class="btn btn-primary">Filmi Düzenle</a>
                    <a onclick="deleteFilm('{{_id}}')" class="btn btn-danger">Filmi Sil</a>
                  </td>
              </tr>
            {{/each}}
          {{else}}
          <tr>
            <td style="text-align: center; background: white; color: red;" colspan="3">
              <b>Veri yok</b>
            </td>
          </tr>
          {{/if}}
        </tbody>
      </table>
      <hr />
      <a id="clear-films" onclick="deleteFilm('all')" class="btn btn-dark" href="#">Tüm Filmleri Temizleyin</a>
    </div>
  </div>
</div>

