<div class="container" style="margin-top:20px;">

  <div class="card row">
    <div class="card-header">Favori Filmlerim</div>
    <div class="card-body">

      <div class="form-row">
        <div class="form-group col-md-6">
          <input
            required
            class="form-control"
            type="text"
            name="title"
            id="title"
            placeholder="Film İsmi"
          />
        </div>
        <div class="form-group col-md-6">
          <input
            required
            class="form-control"
            type="text"
            name="director"
            id="director"
            placeholder="Yönetmen"
          />
        </div>
        <div class="form-group col-md-6">
          <input
            required
            class="form-control"
            type="text"
            name="url"
            id="url"
            placeholder="Film Afiş Linki"
          />
        </div>
      </div>
      <button type="button" id="addFilm" class="btn btn-danger">Film Ekleyin</button>

      <hr />

    </div>

    <div class="card-body">
      <hr />
      <h5 class="card-title" id="films-title">Filmler</h5>

      <hr />
      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">Film Afişi</th>
            <th scope="col">Film İsmi</th>
            <th scope="col">Yönetmen</th>
          </tr>
        </thead>
        <tbody id="films">
          {{#if movies.length}}
            {{#each movies}}
              <tr>
                  <td>
                    <img src="{{url}}" class="img-fluid img-thumbnail">
                  </td>
                  <td>{{title}}</td>
                  <td>{{director}}</td>
                  <td>
                    <a onclick="deleteFilm('{{_id}}')" class="btn btn-danger">Filmi Sil</a>
                  </td>
              </tr>
            {{/each}}
          {{/if}}
        </tbody>
      </table>
      <hr />
      <a id="clear-films" class="btn btn-dark" href="#">Tüm Filmleri Temizleyin</a>
    </div>
  </div>

</div>