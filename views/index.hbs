<div class="container" style="margin-top:20px;">


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-4">
            <label for="title">Film İsmi :</label>
          </div>
          <div class="col-8">
            <input style="width: 100%;" type="text" id="upt_title">
          </div>
        </div>

        <hr />
        
        <div class="row">
          <div class="col-4">
            <label for="director">Yönetmen :</label>
          </div>
          <div class="col-8">
            <input style="width: 100%;" type="text" id="upt_director">
          </div>
        </div>

        <hr />

        
        <div class="row">
          <div class="col-4">
            <label for="url">Film Afişi :</label>
          </div>
          <div class="col-8">
            <input style="width: 100%;" type="text" id="upt_url">
          </div>
        </div>
        <input type="text" style="display: none;" id="upt_id">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
        <button type="button" id="uptButton" class="btn btn-primary">Güncelle</button>
      </div>
    </div>
  </div>
</div>


  <div class="card row">
    <div class="card-header">Favori Filmlerim</div>
    <div class="card-body">

      <div class="form-row">
        <div class="form-group col-md-6">
          <input
            required
            class="form-control"
            type="text"
            name="title"
            id="title"
            placeholder="Film İsmi"
          />
        </div>
        <div class="form-group col-md-6">
          <input
            required
            class="form-control"
            type="text"
            name="director"
            id="director"
            placeholder="Yönetmen"
          />
        </div>
        <div class="form-group col-md-6">
          <input
            required
            class="form-control"
            type="text"
            name="url"
            id="url"
            placeholder="Film Afiş Linki"
          />
        </div>
      </div>
      <button type="button" onclick="addFilm()" id="addFilm" class="btn btn-danger">Film Ekleyin</button>
    </div>

    <div class="card-body">
      <hr />
      <h5 class="card-title" id="films-title">Filmler</h5>

      <hr />
      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">Film Afişi</th>
            <th scope="col">Film İsmi</th>
            <th scope="col">Yönetmen</th>
          </tr>
        </thead>
        <tbody id="films">
          {{#if movies.length}}
            {{#each movies}}
              <tr>
                  <td>
                    <img style="height: 500px;" src="{{url}}" class="img-fluid img-thumbnail">
                  </td>
                  <td><b>{{title}}</b></td>
                  <td>{{director}}</td>
                  <td>
                    <div class="row">
                      <div class="col-6">
                        <a onclick="updateFilm('{{_id}}')" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Filmi Düzenle</a>
                      </div>
                      <div class="col-6">
                        <a onclick="deleteFilm('{{_id}}')" class="btn btn-danger">Filmi Sil</a>
                      </div>
                    </div>
                  </td>
              </tr>
            {{/each}}
          {{else}}
          <tr>
            <td style="text-align: center; background: white; color: red;" colspan="3">
              <b>Veri yok</b>
            </td>
          </tr>
          {{/if}}
        </tbody>
      </table>
      <hr />
      <a id="clear-films" onclick="deleteFilm('all')" class="btn btn-dark" href="#">Tüm Filmleri Temizleyin</a>
    </div>
  </div>
</div>

